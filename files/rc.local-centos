#!/bin/bash

clear_user(){
	for user in centos; do
		userdel --force --remove "$user" || passwd -l "$user" || true
		rm -rf "/home/$user/"
	done
	passwd -d root
}

clean_up(){
    systemctl disable rc-local
    systemctl stop rc-local
	rm -rf /etc/systemd/system/rc-local.service
	rm -rf /etc/rc.local
	rm -rf /etc/subgid.lock
}

clear_user

clean_up