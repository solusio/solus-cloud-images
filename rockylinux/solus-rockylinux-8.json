{
  "variables": {
    "user": "rockylinux",
    "password": "rockylinux",
    "disk_size": "4000",
    "output_directory": "output/rockylinux",
    "output_image_name": "solus-rockylinux-8"
  },

  "builders": [
    {
      "name": "solus.io",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "1900m" ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://download.rockylinux.org/pub/rocky/8.3/isos/x86_64/Rocky-8.3-x86_64-dvd1.iso",
      "iso_checksum": "file:https://download.rockylinux.org/pub/rocky/8.3/isos/x86_64/CHECKSUM",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "rockylinux/data",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "ssh_host_port_min" : 2222,
      "ssh_host_port_max" : 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg <enter><wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "rockylinux/data/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "rockylinux/data/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "rockylinux/data/packages.sh",
        "scripts/configure.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
