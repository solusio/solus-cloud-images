{
  "variables": {
    "user": "alpine",
    "password": "alpine",
    "disk_size": "300",
    "output_directory": "output/alpine",
    "output_image_name": "solus.io-alpine"
  },

  "builders": [
    {
      "name": "solus.io",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "1900m" ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "http://dl-cdn.alpinelinux.org/alpine/v3.11/releases/x86_64/alpine-virt-3.11.3-x86_64.iso",
      "iso_checksum": "bf82e95b3fa0a4e35391202b60631bb687c935688bc09d4452159d92bf3d0172",
      "iso_checksum_type": "sha256",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'alpine' | sudo -S /sbin/poweroff",
      "http_directory": "http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "ssh_host_port_min" : 2222,
      "ssh_host_port_max" : 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 5901,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "30s",
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/interfaces<enter><wait>",
        "fdisk /dev/vda<enter><wait>",
        "n<enter><wait>",
        "p<enter><wait>",
        "1<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "a<enter><wait>",
        "1<enter><wait>",
        "w<enter><wait>",
        "setup-alpine -q<enter><wait>",
        "us<enter><wait>",
        "us<enter><wait10><wait10>",
        "apk add --no-cache e2fsprogs<enter><wait10>",
        "mkfs.ext4 /dev/vda1<enter><wait5>",
        "modprobe ext4<enter><wait5>",
        "setup-bootable /media/cdrom /dev/vda1<enter><wait10>",
        "setup-hostname -n localhost<enter><wait>",
        "mv interfaces /etc/network/interfaces<enter><wait>",
        "passwd root<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "setup-timezone -z UTC<enter><wait>",
        "setup-sshd -c openssh<enter><wait>",
        "mount -t ext4 /dev/vda1 /mnt<enter><wait>",
        "setup-disk /mnt<enter><wait10>",
        "<wait10><wait10>",
        "<wait10><wait10>",
        "<wait10><wait10>",
        "reboot<enter>",
        "<wait10><wait10><wait10>",
        "root<enter><wait>",
        "{{user `password`}}<enter>",
        "apk add sudo<enter><wait5>",
        "apk add bash<enter><wait5>",
        "echo '%wheel ALL=(ALL) ALL' >> /etc/sudoers.d/wheel<enter>",
        "adduser {{user `user`}}<enter>",
        "{{user `password`}}<enter>",
        "{{user `password`}}<enter>",
        "adduser {{user `user`}} wheel<enter>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "files/rc.local-alpine",
      "destination": "/tmp/rc-local-alpine"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "scripts/alpine/packages.sh",
        "scripts/alpine/configure.sh",
        "scripts/alpine/cleanup.sh"
      ]
    }
  ]
}
