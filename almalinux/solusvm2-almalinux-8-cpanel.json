{
  "variables": {
    "user": "almalinux",
    "password": "almalinux",
    "disk_size": "8000",
    "output_directory": "output/almalinux",
    "output_image_name": "solusvm2-almalinux-8-cpanel"
  },
  "builders": [
    {
      "name": "solusvm2",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "1900m" ],
        [ "-cpu", "host" ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://repo.almalinux.org/almalinux/8.8/isos/x86_64/AlmaLinux-8.8-x86_64-minimal.iso",
      "iso_checksum": "file:https://repo.almalinux.org/almalinux/8.8/isos/x86_64/CHECKSUM",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'centos' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "almalinux/http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "host_port_min": 2222,
      "host_port_max": 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks-almalinux-9.cfg <enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "almalinux/files/cpanel/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "almalinux/files/cpanel/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "file",
      "source": "almalinux/scripts/cpanel/run_scripts.sh",
      "destination": "/tmp/run_scripts.sh"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "almalinux/scripts/cpanel/cpanel_install.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo | {{ .Vars }} sudo -S -E bash -xe '{{ .Path }}'",
      "scripts": [
        "almalinux/scripts/packages.sh",
        "almalinux/scripts/cpanel/configure.sh"
      ]
    }
  ]
}
