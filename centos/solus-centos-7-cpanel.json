{
  "variables": {
    "user": "centos",
    "password": "centos",
    "disk_size": "8000",
    "output_directory": "output/centos",
    "output_image_name": "solus-io-centos-7-cpanel"
  },
  "builders": [
    {
      "name": "solus.io",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [
          "-m",
          "2000m"
        ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://mirror.yandex.ru/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-Minimal-2009.iso",
      "iso_checksum": "07b94e6b1a0b0260b94c83d6bb76b26bf7a310dc78d7a9c7432809fb9bc6194a",
      "iso_checksum_type": "sha256",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'centos' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "centos/http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-centos-7.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/cpanel/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "files/cpanel/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "file",
      "source": "scripts/cpanel/run_scripts.sh",
      "destination": "/tmp/run_scripts.sh"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/cpanel/cpanel_install.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo | {{ .Vars }} sudo -S -E bash -xe '{{ .Path }}'",
      "scripts": [
        "centos/scripts/packages.sh",
        "scripts/cpanel/configure.sh"
      ]
    }
  ]
}
