{
  "variables": {
    "user": "almalinux",
    "password": "almalinux",
    "disk_size": "9500",
    "output_directory": "output/almalinux",
    "output_image_name": "solus-almalinux-8-plesk"
  },

  "builders": [
    {
      "name": "solus",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "1900m" ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://repo.almalinux.org/almalinux/8.5/isos/x86_64/AlmaLinux-8.5-x86_64-minimal.iso",
      "iso_checksum": "file:https://repo.almalinux.org/almalinux/8.5/isos/x86_64/CHECKSUM",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "almalinux/http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "host_port_min" : 2222,
      "host_port_max" : 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks-almalinux-8.cfg <enter><wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "almalinux/files/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "almalinux/files/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "file",
      "source": "files/plesk/pleskswaprc",
      "destination": "/tmp/pleskswaprc"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/plesk/install_plesk.sh",
      "environment_vars": [
        "IS_SOLUS=true",
        "INSTALL_BYOL=true",
        "INSTALL_PLESK_VERSION=18.0.43",
        "INSTALL_PLESK_PRESET=Recommended",
        "INSTALL_WITH_PLESK_COMPONENTS=",
        "INSTALL_WITHOUT_PLESK_COMPONENTS=",
        "PLESK_TEMPORARY_LICENSE_KEY="
      ]
    },
    {
      "type": "file",
      "source": "build/revision",
      "destination": "/tmp/.image-revision"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "almalinux/scripts/packages.sh",
        "scripts/configure.sh",
        "scripts/plesk/configure.sh",
        "scripts/plesk/cleanup.sh"
      ]
    }
  ]
}
