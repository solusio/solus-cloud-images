{
  "variables": {
    "user": "centos",
    "password": "centos",
    "disk_size": "4000",
    "output_directory": "output/centos",
    "output_image_name": "solus-io-centos-8"
  },

  "builders": [
    {
      "name": "solus.io",
      "vm_name": "{{user `output_image_name`}}.qcow2",
      "type": "qemu",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [ "-m", "1900m" ]
      ],
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "https://mirror.yandex.ru/centos/8/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso",
      "iso_checksum": "sha256:c87a2d81d67bbaeaf646aea5bedd70990078ec252fc52f5a7d65ff609871e255",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'centos' | sudo -S /sbin/shutdown -hP now",
      "http_directory": "centos/http",
      "ssh_username": "{{ user `user` }}",
      "ssh_password": "{{ user `password` }}",
      "disk_compression": true,
      "host_port_min" : 2222,
      "host_port_max" : 4444,
      "vnc_port_min": 5901,
      "vnc_port_max": 6000,
      "http_port_min": 8501,
      "http_port_max": 8501,
      "ssh_wait_timeout": "40m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks-centos-8.cfg <enter><wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "centos/files/rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "centos/files/rc-local.conf",
      "destination": "/tmp/rc-local.conf"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "centos/scripts/packages.sh",
        "scripts/configure.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
